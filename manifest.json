{
  "manifest_version": 2,
  "name": "Instapage Grid",
  "version": "1.0.0",
  "description": "Create a grid element on Instapage. Icon by Prettycons from the Noun Project",
  "short_name": "instagrid",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://app.instapage.com/*"],
      "js": ["scripts/createGrid.js"]
    }
  ],
  "browser_action": {
    "default_title": "Create Grid in Instapage Editor",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/noun_grid_1606043.png",
      "32": "icons/noun_grid_1606043.png"
    }
  }
}